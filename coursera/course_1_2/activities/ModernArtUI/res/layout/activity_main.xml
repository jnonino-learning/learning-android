<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context="org.coursera.modernartui.MainActivity" >

    <LinearLayout 
        android:id="@+id/boxes"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="5"
		android:baselineAligned="false"
		android:orientation="horizontal">
    
	    <LinearLayout 
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1"
	        android:orientation="vertical" >
	        
			<LinearLayout
			    android:id="@+id/boxOneOne"
	        	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	        	android:orientation="vertical"
	        	android:background="@color/block_one_one_start_color"
	        	android:layout_margin="@dimen/activity_horizontal_margin">
	    	</LinearLayout>
	    
	        <LinearLayout
	            android:id="@+id/boxOneTwo"
	        	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	        	android:orientation="vertical"
	        	android:background="@color/block_one_two_start_color"
	       	 	android:layout_margin="@dimen/activity_horizontal_margin">
	    	</LinearLayout>
	        
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:layout_weight="1"
	        android:orientation="vertical">
	        
			<LinearLayout
			    android:id="@+id/boxTwoOne"
	        	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	        	android:orientation="vertical"
	        	android:background="@color/block_two_one_start_color"
	        	android:layout_margin="@dimen/activity_horizontal_margin">
	    	</LinearLayout>
	    
	        <LinearLayout
	            android:id="@+id/boxTwoTwo"
	        	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	        	android:orientation="vertical"
	        	android:background="@color/block_two_two_start_color"
	       	 	android:layout_margin="@dimen/activity_horizontal_margin">
	    	</LinearLayout>
	    
	        <LinearLayout
	            android:id="@+id/boxTwoThree"
	        	android:layout_width="match_parent"
	    		android:layout_height="match_parent"
	    		android:layout_weight="1"
	        	android:orientation="vertical"
	        	android:background="@color/block_two_three_start_color"
	        	android:layout_margin="@dimen/activity_horizontal_margin">
	    	</LinearLayout>
	    	
	    </LinearLayout>
    
    </LinearLayout>
    
    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
	</SeekBar>
    
</LinearLayout>
